{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "cyan",
          "foreground_templates": [
            "{{ if .Root }}red{{ end }}",
            "{{ if .SSHSession }}yellow{{ end }}",
            "{{ if .Env.SUDO_USER }}yellow{{ end }}"
          ],
          "style": "plain",
          "template": "{{.UserName}}@{{ .HostName }} ",
          "type": "session"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "style": "plain",
          "template": "<darkGray,>[</>",
          "type": "text"
        },
        {
          "foreground": "cyan",
          "background_templates": [
            "{{if .Rebase}}red{{end}}",
            "{{if .Merge}}red{{end}}",
            "{{if .CherryPick}}red{{end}}",
            "{{if .Revert}}red{{end}}"
          ],
          "foreground_templates": [
            "{{if .Rebase}}black{{end}}",
            "{{if .Merge}}black{{end}}",
            "{{if .CherryPick}}black{{end}}",
            "{{if .Revert}}black{{end}}"
          ],
          "properties": {
            "branch_icon": "",
            "fetch_status": true
          },
          "style": "plain",
          "template": "{{ .HEAD }}",
          "type": "git"
        },
        {
          "foreground": "cyan",
          "foreground_templates": [
            "{{if .Behind}}lightRed{{end}}",
            "{{if .Ahead}}green{{end}}",
            ""
          ],
          "properties": {
            "branch_icon": "",
            "fetch_status": true
          },
          "style": "plain",
          "template": "{{if or (.Behind) (.Ahead)}} {{end}}{{if .Behind}}↓{{.Behind}}{{end}}{{if .Ahead}}↑{{.Ahead}}{{end}}",
          "type": "git"
        },
        {
          "style": "plain",
          "template": "<darkGray,>]</> ",
          "type": "text"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "lightYellow",
          "properties": {
            "style": "agnoster"
          },
          "style": "plain",
          "template": "{{ .Path }}",
          "type": "path"
        },
        {
          "foreground": "lightYellow",
          "style": "plain",
          "template": "$ ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}